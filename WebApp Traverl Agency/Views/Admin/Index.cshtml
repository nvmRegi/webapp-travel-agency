@{
    Layout = "_CustomLayout";
}
@model List<PacchettoViaggio>

<div class="container text-center">
    <a class="btn btn-outline-info"
                    href="@Url.Action("CreaNuovo", "Admin")">
                    Aggiungi nuovo pacchetto viaggio
    </a>
</div>


<table class="table align-middle">
        <thead>
            <tr>
                <th scope="col">Immagine</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrizione</th>
                <th scope="col">Giorni</th>
                <th scope="col">Numero destinazioni</th>
                <th scope="col">Prezzo</th>
            </tr>
        </thead>
        <tbody>

        @foreach(PacchettoViaggio viaggio in Model)
        {
            <tr>
                <td><img src="@viaggio.Immagine" alt="@viaggio.Nome" width=250></td>
                <th class="align-middle">@viaggio.Nome</th>
                <td class="align-middle">@viaggio.Descrizione</td>
                <td class="align-middle">@viaggio.Durata gg</td>
                <td class="align-middle">@viaggio.NumeroDestinazioni</td>
                <td class="align-middle">&euro;@viaggio.Prezzo</td>
                <td class="align-middle">
                    <a class="btn btn-sm" href="@Url.Action("Dettagli", "Admin", new{id = viaggio.Id})">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M15 12c0 1.654-1.346 3-3 3s-3-1.346-3-3 1.346-3 3-3 3 1.346 3 3zm9-.449s-4.252 8.449-11.985 8.449c-7.18 0-12.015-8.449-12.015-8.449s4.446-7.551 12.015-7.551c7.694 0 11.985 7.551 11.985 7.551zm-7 .449c0-2.757-2.243-5-5-5s-5 2.243-5 5 2.243 5 5 5 5-2.243 5-5z"/></svg></a>
                    <br>
                    <a class="btn btn-sm" href="@Url.Action()">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polygon points="14 2 18 6 7 17 3 17 3 13 14 2"></polygon><line x1="3" y1="22" x2="21" y2="22"></line></svg>
                    </a>
                    <form action="@Url.Action()" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-activity"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
</table>